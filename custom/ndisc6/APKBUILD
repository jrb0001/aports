# Maintainer: Jean-Rémy Buchs <jrb0001@692b8c32.de>
pkgname=ndisc6
pkgver=1.0.3
pkgrel=0
pkgdesc="NDisc6 is a small collection of useful tools for IPv6 networking."
url="https://www.remlab.net/ndisc6/"
arch="all"
license="GPL-2.0-or-3.0-only"
depends=""
makedepends="linux-headers"
install=""
subpackages="$pkgname-doc"
source="
https://www.remlab.net/files/ndisc6/ndisc6-$pkgver.tar.bz2
"
builddir="$srcdir/ndisc6-$pkgver"
options="suid"

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--disable-nls
	make
}

check() {
	cd "$builddir"
	make check
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
	install -Dm644 COPYING "$pkgdir"/usr/share/licenses/$pkgname/COPYING
}

sha512sums="11dc9833edfc76650b46977d653686ed800dc1cc1dd069051410570f522d538ea9297b013a8d16b94aac3ebf33043cafdaee9fdccb5c02cc08b4c29ceaa96a54  ndisc6-1.0.3.tar.bz2"
